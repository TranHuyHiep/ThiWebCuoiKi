@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@model List<SanPham>
@foreach (var item in Model)
{
    <div class="col-md-6 col-lg-4 mb-5">
        <div class="hotel-room text-center">
            <a asp-controller="home" asp-action="editSP" asp-route-maSP="@item.MaSanPham" class="d-block mb-0 thumbnail"><img src="~/Images/@item.AnhDaiDien" alt="Image" class="img-fluid"></a>
            <div class="hotel-room-body">
                <h3 class="heading mb-0"><a href="#">@item.TenSanPham</a></h3>
                <strong class="price">@item.DonGiaBanNhoNhat</strong>
            </div>
        </div>
    </div>
}